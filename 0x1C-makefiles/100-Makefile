CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
.PHONY: all clean oclean fclean re
OBJ = $(SRC:%.c=%.o)
NAME = school
all: $(OBJ) $(NAME)
%.o:%.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) *.o;
fclean: clean oclean
re: oclean all
